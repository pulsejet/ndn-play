{
  "name": "ndn-play-vscode",
  "publisher": "pulsejet",
  "displayName": "NDN Play",
  "icon": "images/logo.png",
  "description": "NDN-Play Debugging Tools",
  "version": "0.0.6",
  "repository": "https://github.com/pulsejet/ndn-play",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "tlv.preview",
        "displayName": "TLV Preview",
        "selector": [
          {
            "filenamePattern": "*.tlv"
          },
          {
            "filenamePattern": "*.bundle"
          }
        ]
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "dag-panel",
          "title": "Schema DAG",
          "icon": "graph-scatter"
        }
      ]
    },
    "views": {
      "dag-panel": [
        {
          "type": "webview",
          "id": "dct.dagView",
          "name": "Schema DAG",
          "when": "resourceLangId == versec || resourceExtname == .rules"
        }
      ]
    },
    "configuration": {
      "title": "NDN-Play",
      "properties": {
        "ndn-play.custom-tlv-types": {
          "type": "string",
          "default": "",
          "description": "Custom TLV types for visualizer.",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}